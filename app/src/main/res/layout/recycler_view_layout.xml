<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="25dp">

        <TextView
            android:id="@+id/recyclerProductID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"/>

        <ImageButton
            android:id="@+id/recyclerImage"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="80dp"
            android:scaleType="centerInside"
            android:backgroundTint="@color/white"
            android:src="@drawable/logo"/>

        <TextView
            android:id="@+id/recyclerRef"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|top"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="60dp"
            android:text="Title"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/recyclerFavourite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"
            android:backgroundTint="@color/white"
            android:src="@drawable/baseline_favorite_border_24"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/recyclerAvailability"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:layout_marginTop="80dp"
            android:layout_marginStart="10dp"
            android:text="Available"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/recyclerPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:layout_marginTop="120dp"
            android:layout_marginStart="5dp"
            android:text="Â£0.00"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/recycler_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/baseline_add_24"
            android:text="" />

        <ImageButton
            android:id="@+id/recycler_minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/baseline_remove_24"
            android:text="" />

        <TextView
            android:id="@+id/recyclerQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="20dp"
            android:text="0"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            style="@style/Theme.Button.Secondary"
            android:id="@+id/recyclerViewButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:textSize="17sp"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="60dp"
            android:layout_marginEnd="5dp"
            android:padding="5dp"
            android:text="@string/view"/>

        <Button
            style="@style/Theme.Button"
            android:id="@+id/recyclerAddToCartButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="10dp"
            android:paddingStart="10dp"
            android:text="@string/add_to_cart"
            android:textSize="17sp"
            app:icon="@drawable/baseline_add_shopping_cart_24">

        </Button>
    </androidx.cardview.widget.CardView>

</FrameLayout>